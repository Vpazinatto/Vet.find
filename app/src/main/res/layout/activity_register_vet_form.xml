<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFormActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/txtUNome"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/txtPNome"
            android:layout_marginEnd="15dp"
            android:ems="10"
            android:hint=" Ãºltimo nome"
            android:inputType="textPersonName"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/txtPNome"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="36dp"
            android:ems="10"
            android:hint=" primeiro nome"
            android:inputType="textPersonName"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="114dp"
            android:ems="10"
            android:hint=" nome@email.com"
            android:inputType="textPersonName"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/txtSenha"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="193dp"
            android:ems="10"
            android:hint="sua senha"
            android:inputType="textPassword"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/txtTelefone"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="182dp"
            android:ems="10"
            android:inputType="phone" />

        <EditText
            android:id="@+id/txtNasc"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ems="10"
            android:hint="00/00/0000"
            android:inputType="date" />

        <EditText
            android:id="@+id/txtEndereco"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/txtEmail"
            android:layout_marginBottom="103dp"
            android:ems="10"
            android:inputType="textPostalAddress" />

        <Button
            android:id="@+id/btnConc"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="17dp"
            android:background="#b30909"
            android:text="CONCLUIR"
            android:textColor="#ffff"
            android:textSize="16dp" />


    </RelativeLayout>


</LinearLayout>