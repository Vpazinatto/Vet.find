<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity"
    android:background="#3a4460">

    <Space
        android:layout_width="match_parent"
        android:layout_height="23dp" />

    <ImageView
        android:layout_width="163dp"
        android:layout_height="142dp"
        android:background="@drawable/ic_logo" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="13dp" />

    <LinearLayout
        android:layout_width="331dp"
        android:layout_height="88dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginBottom="7sp"
            android:background="@drawable/campo_email"
            android:hint="E-mail"
            android:paddingLeft="40dp"
            android:textColor="#010101" />

        <EditText
            android:id="@+id/senha"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="@drawable/campo_senha"
            android:hint="Senha"
            android:paddingLeft="40dp"
            android:textColor="#010101" />

    </LinearLayout>

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="271dp"
        android:layout_height="36.5dp"
        android:layout_marginBottom="6.2dp"
        android:background="@drawable/login_button"
        android:paddingLeft="112dp"
        android:paddingRight="112dp"
        android:text="Entrar"
        android:textColor="#ffff"
        android:textSize="12dp" />

    <Button
        android:id="@+id/btnEntrarFacebook"
        android:layout_width="271dp"
        android:layout_height="36.5dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/login_button_facebook"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:text="Login pelo Facebook"
        android:textColor="#ffff"
        android:textSize="11.5dp" />

    <Button
        android:id="@+id/txtEsqueceuSenha"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="ESQUECEU A SENHA?"
        android:textColor="#ffff"
        android:textSize="11dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="57dp" />

    <Button
        android:id="@+id/btn_addVet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adicionar VeterinÃ¡rio" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/campo_registrar"
            android:textColor="#ffff"
            android:text="REGISTRAR"
            android:id="@+id/btn_registrar"/>

    </LinearLayout>
</LinearLayout>